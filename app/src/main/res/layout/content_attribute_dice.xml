                    android:text="@string/dice_7"/>

                <TextView
                    android:id="@+id/textViewRollDice7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/RollOneDice"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/tableLayout"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="39dp"
        app:layout_constraintLeft_toLeftOf="@+id/tableLayout">

        <Button
            android:id="@+id/buttonRollAllDice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="rollAllDice"
            android:text="@string/RollAll"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="407dp"/>

        <Button
            android:id="@+id/buttonSeeAttributes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="SeeAttributes"
            android:text="@string/SeeAttributes"
            tools:layout_editor_absoluteX="199dp"
            tools:layout_editor_absoluteY="407dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
